# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/pdf_checker
# For Docker PostgreSQL on port 5433, use: postgresql+asyncpg://postgres:postgres@localhost:5433/pdf_checker

# JWT
SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Storage - AWS S3
USE_S3=true
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=pdf-checker-uploads
# Leave S3_ENDPOINT_URL empty for production AWS S3
# Only set if using S3-compatible service (e.g., MinIO)
S3_ENDPOINT_URL=

# Local Storage (fallback when USE_S3=false)
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=52428800

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Environment
ENVIRONMENT=development
DEBUG=true
